<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add this permission to allow internet access -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidCA"
        tools:targetApi="31">

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main  -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />

        <!-- Users -->

        <activity
            android:name=".ui.RegisterActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".ui.LogoutActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />


        <activity
            android:name=".ui.ProfileActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />


        <activity
            android:name=".ui.AdminProfileActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />

        <!-- Info & Contact -->
        <activity android:name=".ui.InfoActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".ui.ContactUsActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />

        <!-- Product & Categories -->

        <activity
            android:name=".products.ProductsActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true">
        </activity>

        <activity
            android:name=".categories.CategoriesActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true">
        </activity>

        <activity
            android:name=".products.ProductDetailActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true">
        </activity>

        <!-- Bag and Checkout -->

        <activity
            android:name=".bag.BagActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true">
        </activity>

        <activity
            android:name=".checkout.CheckoutActivity"
            android:theme="@style/Theme.AndroidCA"
            android:exported="true">
        </activity>

    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />
</application>
    </manifest>
